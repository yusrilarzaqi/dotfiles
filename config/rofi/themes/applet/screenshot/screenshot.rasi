/* ================== NEW ================= */
configuration {
	font:							    "JetBrainsMono Nerd Font 11";
  show-icons:           true;
  fullscreen:           false;
  drun-display-format:  "{name}";
  disable-history:      false;
	hide-scrollbar: 			true;
	sidebar-mode: 				false;
}

@import "../colors.rasi"

window {
  transparency:                   "real";
  background-color:               @bg;
  text-color:                     @fg;
	border:							            0px 0px 0px 0px;
	border-color:					          @ac;
  border-radius:                  5px;
	width:							            250px;
  location:                       northeast;
  x-offset:                       -10;
  y-offset:                       20;
}

prompt {
  enabled: 						true;
	padding: 						2px 0px 0px 10px;
	/* padding: 						0px 0px 0px 0px; */
	background-color:		@al;
	text-color: 				@fg-dark;
}

textbox-prompt-colon-1 {
	padding: 					0px 0px 0px 5px;
	background-color:	@al;
	text-color: 			@fg-dark;
	expand:           false;
	str:              "ï‰¬";
	font:							"JetBrainsMono Nerd Font 10";
}

textbox-prompt-colon {
	padding: 					0px 0px 0px 5px;
	background-color:	@al;
	text-color: 			@fg-dark;
	expand:           false;
	str:              " Screenshot Flameshot";
	font:							"JetBrainsMono Nerd Font 10";
}

inputbar {
	children: 						          [ textbox-prompt-colon-1 ,textbox-prompt-colon ];
  background-color:               @ac;
  text-color:                     @bga;
  expand:                         false;
	border:							            0px;
  border-radius:                  4px;
	border-color:					          @ac;
  margin:                         0px;
  padding:                        8px;
}

listview {
  padding:                        0px;
  background-color:               @al;
lines:                          4;
  columns:                        1;
  spacing:                        6px;
  cycle:                          true;
  dynamic:                        true;
  layout:                         vertical;
}

mainbox {
  background-color:               @al;
	border:							            0px;
  border-radius:                  0px;
	border-color:					          @ac;
  children:                       [ inputbar, listview ];
  spacing:                       	6px;
  padding:                        6px;
}

element {
  background-color:               @al;
  /* text-color:                     @fg; */
  orientation:                    horizontal;
  border-radius:                  0px;
  padding:                        8px 8px 8px -16px;
}

element-icon {
  size:                           24px;
  border:                         0px;
  background-color:               @al;
}

element-text {
  background-color:               @al;
  text-color:                     @fg;
  expand:                         true;
  horizontal-align:               0;
  vertical-align:                 0.5;
  margin:                         0px 2.5px 0px 2.5px;
}

element selected {
  background-color:               @bg;
	border:							            2px;
  border-radius:                  4px;
  border-color:                  	@ac;
}

