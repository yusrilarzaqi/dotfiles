/* Confirm Dialog */

@import "colors.rasi"

* {
  background-color:       @al;
  text-color:             @fg;
	font:				 	          "JetBrainsMono Nerd Font 10";
}

window {
  width:      			      230px;
  padding:    			      25px;
  border:					        0px 0px 4px 0px;
  border-radius:          0px;
  border-color:           @ac;
  location:               north;
  x-offset: 0px;
  y-offset: 25px;
  /* x-offset:               -10; */
  /* y-offset:               20; */
  background-color:@bg;
}

entry {
  expand: 				  true;
  text-color:				@ac;
}
